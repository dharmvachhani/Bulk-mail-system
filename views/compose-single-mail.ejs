<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Compose Mail</title>

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css" />
    <!-- summernote -->
    <link rel="stylesheet" href="plugins/summernote/summernote-bs4.min.css" />
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('partials/sidebar') %>
      <script type="text/javascript">
        var element1 = document.getElementById("mainnav4");
        element1.classList.add("menu-open");
        var element2 = document.getElementById("nav4");
        element2.classList.add("active");
        var element3 = document.getElementById("nav41");
        element3.classList.add("active");
      </script>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Compose Mail</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">Compose Mail</li>
                </ol>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <!-- /.col -->
              <div class="col-md-1"></div>
              <div class="col-md-10">
                <div class="card card-primary card-outline">
                  <form action="/compose-single-mail" method="POST" enctype="multipart/form-data">
                    <div class="card-header">
                      <h3 class="card-title">Compose New Message</h3>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                      <div class="form-group">
                        <select class="form-control" name="client">
                          <option>Select client</option>
                          <% for(var i=0; i < clients.length; i++) { %>
                          <option value="<%= clients[i].email %>">
                            <%= clients[i].name %> < <%= clients[i].email %> >
                          </option>

                          <% } %>
                        </select>
                      </div>
                      <div class="form-group">
                        <input class="form-control" name="subject" placeholder="Subject:" />
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="email" name="cc" placeholder="CC:" />
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="email" name="bcc" placeholder="BCC:" />
                      </div>
                      <div class="form-group">
                        <textarea
                          id="compose-textarea"
                          name="msg"
                          class="form-control"
                          style="height: 1300px"
                        >
                        </textarea>
                      </div>
                      <div class="form-group">
                        <div class="btn btn-default btn-file">
                          <i class="fas fa-paperclip"></i> Attachment
                          <input type="file" name="attachment" />
                        </div>
                        <p class="help-block">Max. 32MB</p>
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <div class="float-right">
                        <button type="submit" class="btn btn-primary">
                          <i class="far fa-envelope"></i> Send
                        </button>
                      </div>
                      <button type="reset" class="btn btn-default">
                        <i class="fas fa-times"></i> Discard
                      </button>
                    </div>
                    <!-- /.card-footer -->
                  </form>
                </div>
                <!-- /.card -->
              </div>
              <div class="col-md-1"></div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.min.js"></script>
    <!-- Summernote -->
    <script src="plugins/summernote/summernote-bs4.min.js"></script>
    <script>
      $(function () {
        //Add text editor
        $("#compose-textarea").summernote({
          height: 300,
        });
      });
    </script>
  </body>
</html>
